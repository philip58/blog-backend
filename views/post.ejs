<h1> View And Comment </h1>
<a href="/">Home Page</a>
<h2><%= viewPost.title %></h2>
<p><%= viewPost.content %></p>
<p><%= viewPost.author %></p>
<p><%= viewPost.date %></p>
<a href="/comment/<%= viewPost._id %>"> Comment</a>

<h1>Comments ...</h1>
<% viewPost.comments.forEach((post) => { %>
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <p><%= post.author %></p>
    <p><%= post.date %></p>
    <a href="/delete/comment/<%= viewPost._id %>/<%= post._id %>">Delete</a>
<% }); %>